---
import IconAt from '../assets/icons/IconAt.astro';
import IconGithub from '../assets/social/IconGithub.astro'
import IconLikedin from '../assets/social/IconLikedin.astro'
import IconX from '../assets/social/IconX.astro'
---

<section id='social' class='md:w-[720px] container mx-auto pb-20'>
  <h2 class='flex gap-2 items-center text-5xl font-extrabold mb-8'>
    <IconAt class='size-12' /><span>Social</span>
  </h2>
  <nav class='w-full grid grid-cols-4 gap-x-4'>
    <a
      class='size-full border-2 bg-slate-900 border-slate-700 rounded-2xl p-4 text-center text-xl font-bold flex items-center gap-2 transition ease-in-out duration-300 hover:border-slate-600'
      href='https://twitter.com/miguejmdev'
      target='_blank'><span><IconX class='size-8' /></span><span>Twitter</span></a
    >
    <a
      class='size-full border-2 bg-slate-900 border-slate-700 rounded-2xl p-4 text-center text-xl font-bold flex items-center gap-2 transition ease-in-out duration-300 hover:border-slate-600'
      href='https://github.com/MiguelAJM'
      target='_blank'><span><IconGithub class='size-8' /></span>Github</a
    >
    <a
      class='size-full text-blue-400 border-2 bg-slate-900 border-slate-700 rounded-2xl p-4 text-center text-xl font-bold flex items-center gap-2 transition ease-in-out duration-300 hover:border-slate-600'
      href='https://www.linkedin.com/in/miguel-angel-70aa9b287'
      target='_blank'><span><IconLikedin class='size-8' /></span>Linkedin</a
    >
  </nav>
</section>
